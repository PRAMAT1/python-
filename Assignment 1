import pandas as pd
input_sheet1 = pd.read_excel('input_sheet1.xlsx')
input_sheet2 = pd.read_excel('input_sheet2.xlsx')
merged_df = pd.merge(input_sheet1, input_sheet2, on='User ID')
individual_scores = merged_df.groupby('Name')['Score'].sum()
team_scores = merged_df.groupby('Team Name')['Score'].sum()
individual_leaderboard = pd.DataFrame({'Name': individual_scores.index, 'Score': individual_scores.values})
team_leaderboard = pd.DataFrame({'Team Name': team_scores.index, 'Score': team_scores.values})
individual_leaderboard = individual_leaderboard.sort_values(by='Score', ascending=False)
team_leaderboard = team_leaderboard.sort_values(by='Score', ascending=False)
individual_leaderboard['Rank'] = range(1, len(individual_leaderboard)+1)
team_leaderboard['Rank'] = range(1, len(team_leaderboard)+1)
individual_leaderboard.to_excel('individual_leaderboard.xlsx', index=False)
team_leaderboard.to_excel('team_leaderboard.xlsx', index=False)
